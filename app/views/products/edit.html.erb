<div class="col-md-6 col-md-offset-3">
<h1>Edit product information</h1>

<%= form_for [current_user, @feed, @product], html: {class: "form-horizontal"} do |f| %>
    <div class="field form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Update Product Information", class: "btn btn-primary" %>
    </div>
<% end %>

<%= link_to "Products", user_feed_products_path(current_user, @feed) %>
</div>